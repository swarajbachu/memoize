{
  "name": "@memoize/application",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "format": "biome format .",
    "format:fix": "biome format . --write ",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --fix",
    "migrate:local": "wrangler d1 migrations apply memoize-db --local ",
    "migrate:prod": "wrangler d1 migrations apply memoize-db --remote",
    "pages:build": "pnpx @cloudflare/next-on-pages",
    "preview": "pnpm run pages:build && wrangler pages dev",
    "deploy": "pnpm run pages:build && wrangler pages deploy",
    "direct-deploy": "wrangler pages deploy",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e .dev.vars --"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.11.0",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "@trpc/server": "catalog:",
    "framer-motion": "^11.5.4",
    "geist": "^1.3.1",
    "http": "0.0.1-security",
    "immer": "^10.1.1",
    "lucide-react": "^0.439.0",
    "next": "14.2.14",
    "react": "catalog:react18",
    "react-dom": "catalog:react18",
    "react-icons": "^5.3.0",
    "sonner": "^1.5.0",
    "superjson": "2.2.1",
    "svix": "^1.37.0",
    "zod": "catalog:",
    "zustand": "5.0.0-rc.2"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.2",
    "@memoize/api": "workspace:*",
    "@memoize/db": "workspace:*",
    "@memoize/tailwind-config": "workspace:*",
    "@memoize/tsconfig": "workspace:*",
    "@memoize/ui": "workspace:*",
    "@memoize/validators": "workspace:*",
    "@types/node": "^20.14.15",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
    "dotenv-cli": "^7.4.2",
    "jiti": "^1.21.6",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  }
}
